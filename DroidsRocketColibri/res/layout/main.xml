<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hsr="http://schemas.android.com/apk/res/ch.hsr.rocketcolibri"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ch.hsr.rocketcolibri.view.draggable.DragLayer
        android:id="@+id/drag_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SurfaceView
            android:id="@+id/camView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </SurfaceView>

        <ch.hsr.rocketcolibri.view.widget.Circle
            android:id="@+id/circle1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            hsr:backgroundResource="@drawable/cross"
            hsr:diameterInDP="380"
            hsr:orientationSide="left"
            hsr:positionInPercentX="20"
            hsr:positionInPercentY="60" />

        <ch.hsr.rocketcolibri.view.widget.Circle
            android:id="@+id/circle2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            hsr:backgroundResource="@drawable/cross"
            hsr:diameterInDP="380"
            hsr:orientationSide="right"
            hsr:positionInPercentX="20"
            hsr:positionInPercentY="60" />
    </ch.hsr.rocketcolibri.view.draggable.DragLayer>

    <include layout="@layout/desktop_menu" />

</FrameLayout>