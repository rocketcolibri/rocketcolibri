<?xml version="1.0" encoding="utf-8"?>
<ch.hsr.rocketcolibri.view.draggable.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hsr="http://schemas.android.com/apk/res/ch.hsr.rocketcolibri"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc" >

    <SurfaceView
        android:id="@+id/camView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </SurfaceView>

    <ch.hsr.rocketcolibri.widget.Circle
        android:id="@+id/circle1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        hsr:backgroundResource="@drawable/cross"
        hsr:diameterInDP="380"
        hsr:orientationSide="left"
        hsr:positionInPercentX="20"
        hsr:positionInPercentY="60" />

    <ch.hsr.rocketcolibri.widget.Circle
        android:id="@+id/circle2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        hsr:backgroundResource="@drawable/cross"
        hsr:diameterInDP="380"
        hsr:orientationSide="right"
        hsr:positionInPercentX="20"
        hsr:positionInPercentY="60" />

    <ch.hsr.rocketcolibri.widget.SwipeInMenu
        android:id="@+id/meter1"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="#F5E6A2"
        android:translationX="0dp"
        android:translationY="120dp"
        hsr:positionInDefaultPortrait="bottom" />

</ch.hsr.rocketcolibri.view.draggable.DragLayer>