<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/resizeIv"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/crop" />

        <ImageView
            android:id="@+id/maximizeIv"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/maximize" />

        <ImageView
            android:id="@+id/minimizeIv"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/minimize" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/alphaSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/editChannel"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/edit" />

        <ch.hsr.rocketcolibri.view.HoldImageView
            android:id="@+id/deleteElementBtn"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/delete" />
    </LinearLayout>

</LinearLayout>